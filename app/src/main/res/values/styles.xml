<resources>

    <!-- Base application theme. -->
    <style name="AppManager" parent="AppManager.Base">

    </style>

    <style name="AppManager.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="windowActionBar">false</item>
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>
        <!-- You can also set colorControlNormal, colorControlActivated
           colorControlHighlight and colorSwitchThumbNormal. -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_custom_bar</item>

    </style>

    <style name="ToolsTheme_2">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/tools_item</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:weightSum">1.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="ViewTitle">
        <item name="android:background">@color/list_txt_info_4</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <style name="ListStyle_2">
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>

    <style name="TxtTitle">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/list_color_info_title</item>
        <item name="android:background">@drawable/list_row_title</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <attr name="colorAccentLight" format="color|reference" />

    <attr name="colorSelected" format="color|reference" />



    <!--TEXT STYLES-->

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Text.Headline">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Subhead">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Text.Body1.Inverse">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="Text.Headline.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="Text.Subhead.Inverse">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="AppManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
