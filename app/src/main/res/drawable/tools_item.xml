<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false">
        <bitmap android:src="@drawable/tools_bg_selected" android:tileMode="repeat" />
        <shape>
            <stroke android:width="1.0dip" android:color="@color/tools_stroke" />
            <solid android:color="@color/tools_back_selected" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true">
