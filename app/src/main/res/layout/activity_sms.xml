<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include android:id="@id/toolbar"
        layout="@layout/toolbar"/>
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/lnrlytRunningPro"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        wheel:matProg_barColor="@color/primary"
        wheel:matProg_progressIndeterminate="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutSmsCount"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif-thin"
            android:singleLine="true"
            android:text="SMS Count"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/txtViewSmsCount"
            android:layout_width="10dp"
            android:layout_height="28dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/thread_count_box_light"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="25"
            android:textColor="@color/icons"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewSms"
        android:showDividers="end"
        android:divider="@color/divider"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:listSelector="@drawable/list_selector"
        android:layout_below="@id/linearLayoutSmsCount"
        android:visibility="gone">

    </ListView>

</RelativeLayout>