<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:padding="10dp">

        <com.mikepenz.iconics.view.IconicsImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_action_file_folder"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:id="@+id/view"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Storage.DATA"
            android:id="@+id/textViewDirectoryHeaderName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/view"
            android:layout_toEndOf="@+id/view"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-thin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewStoragePath"
            android:layout_below="@+id/textViewDirectoryHeaderName"
            android:layout_alignLeft="@+id/textViewDirectoryHeaderName"
            android:layout_alignStart="@+id/textViewDirectoryHeaderName"
            android:textStyle="normal"
            android:fontFamily="sans-serif-thin"/>
    </RelativeLayout>


</RelativeLayout>