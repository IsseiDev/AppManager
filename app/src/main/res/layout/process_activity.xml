    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/app_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            android:id="@+id/lnrlytRamInfo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_ram"
                android:id="@+id/textViewTotalRam"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/available_ram"
                android:id="@+id/textViewUsedRam"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <com.gc.materialdesign.views.ProgressBarDeterminate
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@+id/app_card"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.gc.materialdesign.views.ProgressBarDeterminate>
    <LinearLayout
        android:id="@+id/lnrlytRunningPro"
        android:layout_below="@+id/app_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running Processes"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewRunningProcessCount"
            android:text="25"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:background="@drawable/rounded_patch"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:id="@+id/view"
        android:layout_below="@+id/lnrlytRunningPro"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress"
        android:layout_below="@+id/lnrlytRunningPro"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        wheel:matProg_barColor="@color/primary"
        wheel:matProg_progressIndeterminate="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lnrlytRunningPro"
        android:layout_marginBottom="20dp">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listProcess"
            android:padding="10dp"
            android:transcriptMode="alwaysScroll"
            android:visibility="visible"
            android:layout_marginBottom="5dp">

        </ListView>

    </LinearLayout>
    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/buttonCleanRam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/clean_ram"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_marginTop="5dp"
        android:hapticFeedbackEnabled="true"/>

</RelativeLayout>