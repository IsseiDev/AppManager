<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appman.appmanager">

    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.appman.appmanager.utils.AppData"
        android:allowBackup="true"
        android:icon="@mipmap/hdd"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ApkInfo"
            android:label="@string/title_activity_apk_list"/>
        <activity android:name=".RamInfo"/>
        <activity android:name=".DeviceInfo"
            android:icon="@mipmap/ic_action_communication_stay_current_portrait"/>
    </application>

</manifest>
